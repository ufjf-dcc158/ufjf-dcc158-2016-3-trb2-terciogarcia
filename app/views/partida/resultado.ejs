<%- include('../layout/header') %>
<div class="content-box-large">
	<div class="panel-heading">
	    <div class="panel-title">Registrar Resultado</div>
	</div>

	<div class="panel-body">
		<form class="form-horizontal" method="post" action="" role="form">
			<div class="col-sm-6">
				<div class="form-group">
					<label class="col-sm-5 control-label">Partida</label>
					<div class="col-sm-7">
						<select name="partida" class="form-control" required="" id="select-partida">
							<option value="">Selecione...</option>
							 <% partidas.forEach(function(partida){ %>
								<option value="<%=partida._id%>"
								data-jogador1="<%=partida.jogador_1.nome_completo%>" 
								data-jogador2="<%=partida.jogador_2.nome_completo%>">
								<%=partida.jogador_1.nome_completo%> X <%=partida.jogador_2.nome_completo%> (<%=partida.data%>)
								</option>
						     <% }); %>
						</select>
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-5 control-label" >Resultado</label>
					<div class="col-sm-7">
						<input type="radio" required name="resultado" value="jogador1" class="type">
						<label>Jogador <span style="color: #0000ff" id="jogador-1">1</span> venceu</label><br>
						<input type="radio" required name="resultado" value="jogador2" class="type">
						<label>Jogador <span style="color: #0000ff" id="jogador-2">2</span> venceu</label><br>
						<input type="radio" required name="resultado" value="empate" class="type">
						<label>Empate</label>
					</div>
				</div>
			</div>


			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary">Registrar</button>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include('../layout/footer') %>


<script>
	$(document).ready(function(){
		$("#select-partida").change(function(){
			if($(this).val()){
				var j1 = $(this).find('option:selected').data('jogador1');
				var j2 = $(this).find('option:selected').data('jogador2');
				$('#jogador-1').text(j1);
				$('#jogador-2').text(j2);
			}
			else{
				$('#jogador-1').text(1);
				$('#jogador-2').text(2);
			}
		});
	})
</script>

