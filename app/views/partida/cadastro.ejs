<%- include('../layout/header') %>
<div class="content-box-large">
	<div class="panel-heading">
	    <div class="panel-title">Cadastrar Partida</div>
	</div>

	<div class="panel-body">
		<form class="form-horizontal" method="post" action="" role="form">
			<div class="col-sm-6">
				<div class="form-group">
					<label class="col-sm-4 control-label">Jogador 1</label>
					<div class="col-sm-8">
						<select name="jogador_1" class="form-control" required="" id="select-jogador-1">
							<option value="">Selecione...</option>
							 <% jogadores.forEach(function(jogador){ %>
								<option value="<%=jogador._id%>"><%=jogador.nome_completo%></option>
						     <% }); %>
						</select>
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-4 control-label">Data</label>
					<div class="col-sm-8">
						<input required type="text" name="data" class="form-control datepicker">
					</div>
				</div>

				<div class="form-group">
					<label class="col-sm-4 control-label">Hor√°rio</label>
					<div class="col-sm-8">
						<input required type="text" name="horario" class="form-control timepicker">
					</div>
				</div>
			</div>

			<div class="col-sm-6">
				<div class="form-group">
					<label class="col-sm-2 control-label">Jogador 2</label>
					<div class="col-sm-8">
						<select name="jogador_2" class="form-control" required="" id="select-jogador-2">
							<option value="">Selecione...</option>
							 <% jogadores.forEach(function(jogador){ %>
								<option value="<%=jogador._id%>"><%=jogador.nome_completo%></option>
						     <% }); %>
						</select>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary">Cadastrar</button>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include('../layout/footer') %>

<script>
	$(document).ready(function(e){
		$("#select-jogador-1, #select-jogador-2").change(function(){
			var j1 = $('#select-jogador-1').val();
			var j2 = $('#select-jogador-2').val();
			if(j1 == j2){
				alert('Por favor, selecione jogadores diferentes');
				$("#select-jogador-1, #select-jogador-2").val(null);
				return false;
			}
		});
	});
</script>

